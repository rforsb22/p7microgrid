PRICE_AREA=DK1

# Location + horizon
LAT=57.0488
LON=9.9217

# Use metObs for historical
DMI_METOBS_BASE=https://dmigw.govcloud.dk/v2/metObs
DMI_API_KEY_HISTORY=14bd6bdf-9440-427b-906b-16e7e67e2a71
DMI_PARAM_ID=wind_speed_past1h
# Flyvestation Ålborg weather station if not specified takes closest active station_id to the lat/lon
DMI_STATION_ID=06030


# Window (UTC)
HIST_START=2025-10-15T00:00:00Z
HIST_END=2025-10-22T00:00:00Z

# Turbine
TURBINE_RATED_KW=3.0
TURBINE_RATED_MS=12.0
TURBINE_CUTIN_MS=3.0
TURBINE_CUTOUT_MS=25.0

# DMI forecastedrAPI auth + model selection

DMI_BASE_URL=https://dmigw.govcloud.dk/v1/forecastedr
DMI_COLLECTION=harmonie_dini_sf
DMI_PARAM=wind-speed-10m
DMI_API_KEY=3f70e182-5f48-4e42-b6e0-5fd6f9c4be7b

# Time window around "now" (in hours)
WEATHER_PAST_HOURS=24
WEATHER_FWD_HOURS=24   # up to ~48–66 h is pure HARMONIE; beyond may blend in other models if you later fall back

# Opening printed URL to confirm your key + params
PRINT_URL=1


# Price
DKK_PER_EUR=7.45
PRICE_WEIGHT=0.5
CO2_WEIGHT=0.5

# OPTIONAL: if you want to pull CO2 from MinStrøm, paste a timeseries endpoint here.
# It should return timestamps + intensity in g/kWh over a range, e.g. 48h past & 48h ahead.
# Example placeholder (edit to the exact endpoint from their docs):
MINSTROEM_CO2_URL=

# --- PV settings (defaults shown) ---
PV_KWP=5.0            # installed DC capacity (kWp)
PV_TILT_DEG=35        # module tilt from horizontal (deg)
PV_AZIMUTH_DEG=180    # 180 = facing south, 90 = east, 270 = west
PV_NOCT=45            # Nominal Operating Cell Temp (°C), typical 42–48
PV_GAMMA_P=-0.004     # power temp coeff (per °C), typical -0.003 to -0.005
PV_INVERTER_EFF=0.96  # DC->AC efficiency

# Battery (same as your microgrid.yaml; these are only for this simple script)
BATTERY_MAX_KWH=10
BATTERY_MAX_CHARGE_KW=5
BATTERY_MAX_DISCHARGE_KW=5
BATTERY_EFFICIENCY=0.92   # round-trip via charge*discharge (we’ll use sqrt for each leg)
BATTERY_INIT_SOC_KWH=3.5

# Reserve energy for big cold appliances
COLD_RESERVE_HOURS=6

# If price CSV is present, we'll prefer running big appliances when price is below
CHEAP_PRICE_QUANTILE=0.35 # 0.35 = bottom 35% prices

# Appliances
TOASTER_KW=1.2            # 1.2 kW = typical 2-slice toaster
TOASTER_CYCLE_MIN=2       # minutes per toast cycle

FRIDGE_KWH_YEAR=150
FREEZER_KWH_YEAR=200

MICROWAVE_KW=1.0
MICROWAVE_CYCLE_MIN=5

AIRFRYER_KW=1.8
AIRFRYER_CYCLE_MIN=15

OVEN_KW=2.2
OVEN_CYCLE_MIN=45